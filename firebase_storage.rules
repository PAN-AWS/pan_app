rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAllowedContentType() {
      return request.resource.contentType.matches('image/.*')
          || request.resource.contentType.matches('video/.*');
    }

    function isAllowedSize(maxBytes) {
      return request.resource.size < maxBytes;
    }

    function isChatMember(chatId) {
      return isSignedIn()
        && chatId is string
        && firestore.exists(/databases/$(database)/documents/chats/$(chatId))
        && firestore.get(/databases/$(database)/documents/chats/$(chatId)).data.members.hasAny([request.auth.uid]);
    }

    function isGroupMember(groupId) {
      return isSignedIn()
        && groupId is string
        && firestore.exists(/databases/$(database)/documents/groups/$(groupId))
        && firestore.get(/databases/$(database)/documents/groups/$(groupId)).data.members.hasAny([request.auth.uid]);
    }

    match /public_profiles/{userId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isSignedIn()
        && request.auth.uid == userId
        && fileName.matches('avatar\.(jpg|png|webp)')
        && request.resource.contentType != null
        && request.resource.contentType.matches('image/.*')
        && isAllowedSize(10 * 1024 * 1024);
    }

    match /chat_media/{chatId}/{messageId}/{fileName} {
      allow read: if isChatMember(chatId);
      allow write: if isChatMember(chatId)
        && request.resource.contentType != null
        && isAllowedContentType()
        && isAllowedSize(20 * 1024 * 1024);
    }

    match /group_media/{groupId}/{messageId}/{fileName} {
      allow read: if isGroupMember(groupId);
      allow write: if isGroupMember(groupId)
        && request.resource.contentType != null
        && isAllowedContentType()
        && isAllowedSize(20 * 1024 * 1024);
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
