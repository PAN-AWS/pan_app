rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Avatar / immagini profilo pubbliche
    match /public_profiles/{userId}/{allPaths=**} {
      // Chiunque può leggere (profilo pubblico)
      allow read: if true;

      // Può scrivere solo l'utente autenticato proprietario
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Consentire al proprietario autenticato di leggere/scrivere i propri file profilo
    match /users/{userId}/profile/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Blocca tutto il resto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
